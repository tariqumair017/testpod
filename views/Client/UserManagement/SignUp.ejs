          <div  class="form-outline mb-3 col-md-6 position-relative">
            <label for="validationCustom02" class="form-label">Password</label>
            <input  placeholder="Please Enter Password" type="password" name="password" class="form-control" id="myInput" 
              required />
            <span onclick="password_show_hide()">
              <i style="position: absolute;top:43px;right:20px" class="fa-sharp fa-solid fa-eye " id="show_eye"></i>
              <i style="position: absolute;top:43px;right:20px" class="fa-solid fa-eye-slash d-none" id="hide_eye"></i>
            </span>
            <div class="invalid-feedback">
              Please provide a valid Password.
            </div>
          </div>
          <div  class="form-outline mb-3 col-md-6 position-relative">
            <label for="validationCustom02" class="form-label">Confirm Password</label>
            <input  placeholder="Please Enter Confirm Password" type="password" name="confirmPassword"
              class="form-control" required />
