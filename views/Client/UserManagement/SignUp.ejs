<body style="margin: 0px; padding: 0px">
  <section>
    <div class="login">
      <div class="signup-container">
        <div class="text-center">
          <a href="/">
          <img  src="https://testpod-bucket.s3.amazonaws.com/pages/Words.svg" />
        </a>
        </div>
        <div class="text-center">
          <img width="90%" src="https://testpod-bucket.s3.amazonaws.com/pages/vector image 1.svg" alt="Sample image" />
        </div>
        <div>
          <p class="login-text-1 text-center">Welcome aboard my friend</p>
          <p class=" login-text-2 text-center">just a couple of clicks and we start</p>
        </div>
      </div>
      <div class="signup-right-part">
        <div class="mobile-ligin-logo">
          <img class="mobile-logo" src="https://testpod-bucket.s3.amazonaws.com/pages/Words.svg" />
        </div>
        <div>
          <p style="margin: 0%;" class="login-sign-text text-center">SIGN UP</p>
        </div>
        <form class="user-sign-up needs-validation row" autocomplete="off" action="/sign-up" method="post" novalidate>
          <div class="form-outline mb-4"> 
            <%- include ('../partials/error'); -%>
          </div>
          <div class="form-outline mb-4 col-md-6 position-relative">
            <label for="validationCustom01" class="form-label">Name</label>
            <input  placeholder="Please Enter Your Name" type="text" name="name" class="form-control"
              id="validationCustom01" required />
            <div class="invalid-feedback">
              Please provide a valid name.
            </div>
          </div>
          <div class="form-outline mb-4 col-md-6 position-relative">
            <label for="validationCustom01" class="form-label">Email</label>
            <input  placeholder="Please Enter Email" type="email" name="username" class="form-control"
              id="validationCustom01" required />
            <div class="invalid-feedback">
              Please provide a valid Email.
            </div>
          </div>

          <div class="form-outline mb-4 col-md-6 position-relative">
            <label for="validationCustom01" class="form-label">Phone Number</label>
            <input  placeholder="Please Enter Phone Number" min="0" type="number" name="phoneNum" class="form-control"
              id="validationCustom01" required />
            <div class="invalid-feedback">
              Please provide a valid pnone number.
            </div>
          </div>
          <div class="form-outline mb-4 col-md-6 position-relative">
            <label for="validationCustom01" class="form-label">Country</label>
            <input  placeholder="Please Enter Country" type="text" name="country" class="form-control"
              id="validationCustom01" required />
            <div class="invalid-feedback">
              Please provide a valid country.
            </div>
          </div>
