<% layout('Client/layouts/boilerPlate') -%>

<!-- main-area -->
<main>
  <!-- breadcrumb-area -->
  <section
    class="breadcrumb-area d-flex align-items-center"
    style="background-image: url(/client/img/testimonial/test-bg.png)"
  >
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12">
          <div class="breadcrumb-wrap text-left">
            <div class="breadcrumb-title">
              <h2>Quizzes</h2>
              <div class="breadcrumb-wrap">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Quizzes
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- main-area-end -->
<% var count = 1; %>
<!-- All quizzes  Start-->
<div class="all-quiz">
  <div class="all-quiz-upper-section">
    <div class="all-quiz-upper-section-header">
      <h6>New jersey Driver's Examination</h6>
      <h6>DMV Permit Test #1</h6>
    </div>
    <div class="all-quiz-upper-section-inner">
      <div class="all-quiz-upper-section-part-left">
        <h4>FREE New Jersey DMV Practical Test</h4>
        <p>
          Anyone operating a motor vehicle or motor-driven bike on New Jersey's
          public streets or highways must have a valid driver's licence or
          learner's permit. New Jersey's DMV practise examinations include
          questions based on the New Jersey Driver Handbook's most essential
          traffic signals and..
        </p>
      </div>
      <div class="all-quiz-upper-section-part-right">
        <div class="all-quiz-upper-section-scorus-card">
          <p>Question</p>
          <h5 id="total-questions">
            <%=data.length < 10 ? "0" + data.length : data.length%>
          </h5>
        </div>
        <div class="all-quiz-upper-section-scorus-card">
          <p>Correct</p>
          <h5 id="total-correct">--</h5>
        </div>
        <div class="all-quiz-upper-section-scorus-card">
          <p>In-Correct</p>
          <h5 id="total-in-correct">--</h5>
        </div>
      </div>
    </div>
  </div>
  <div class="all-quizzes">
    <div class="all-quiz-left-part">
      <div class="questions-box">
        <!-- Backend Data -->
        <% data.forEach(single => { %>
        <div class="questions-text">
          <h5><%=count%>. <%=single.question%></h5>
        </div>
        <div id="p<%=count%>" class="all-quiz-allradio-option">
          <label>
            <input
              type="radio"
              value="<%=single.optionA%>"
              name="p<%=count%>"
              onclick="showAns('<%=count%>',this)"
            />
            <h6 style="margin: 0%; font-weight: 500"><%=single.optionA%></h6>
          </label>
          <label>
            <input
              type="radio"
              value="<%=single.optionB %>"
              name="p<%=count%>"
              onclick="showAns('<%=count%>',this)"
            />
            <h6 style="margin: 0%; font-weight: 500"><%=single.optionB%></h6>
          </label>
          <label>
            <input
              type="radio"
              value="<%=single.optionC %>"
              name="p<%=count%>"
              onclick="showAns('<%=count%>',this)"
            />
            <h6 style="margin: 0%; font-weight: 500"><%=single.optionC%></h6>
          </label>
          <label>
            <input
              type="radio"
              value="<%=single.optionD %>"
              name="p<%=count%>"
              onclick="showAns('<%=count%>',this)"
            />
            <h6 style="margin: 0%; font-weight: 500"><%=single.optionD%></h6>
          </label>
          <div id="all-quiz-discription">
            <p><%=single.hint%></p>
          </div>
        </div>
        <%count++%> <%})%>
        <!-- Backend Data -->
      </div>
      <div class="all-quiz-result">
        <button onclick="checkResult()">Grade This Section</button>
      </div>
    </div>
    <div class="all-quiz-right-part">
      <div class="all-quiz-progress">
        <h5>Your Progress</h5>
        <p>
          When other drivers are behaving angrily, you should take action to
          physically and mentally distance yourself from the situation. Avoid
          making eye contact with them, or making body movements or gestures
          that could provoke them.
        </p>
      </div>
    </div>
  </div>
</div>
<!-- All quizzes Ens -->

<script src="/client/js/about.js"></script>
