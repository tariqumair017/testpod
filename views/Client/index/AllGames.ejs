<% layout('Client/layouts/boilerPlate') -%>

  <!-- main-area -->
  <main>
    <!-- search-popup -->
    <div class="modal fade bs-example-modal-lg search-bg popup1" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content search-popup">
          <div class="text-center">
            <a href="#" class="close2" data-dismiss="modal" aria-label="Close">Ã— close</a>
          </div>
          <div class="row search-outer">
            <div class="col-md-11">
              <input type="text" placeholder="Search for products..." />
            </div>
            <div class="col-md-1 text-right">
              <a href="#"><i class="fa fa-search" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /search-popup -->
    <!-- breadcrumb-area -->
    <section class="breadcrumb-area d-flex align-items-center" style="
      background-image: url(https://testpod-bucket.s3.amazonaws.com/pages/test-bg.png);
    ">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-xl-12 col-lg-12">
            <div class="breadcrumb-wrap text-left">
              <div class="breadcrumb-title wow animate__fadeInDown" data-wow-duration=".9s">
                <h2>Flags Games</h2>
                <div class="breadcrumb-wrap">
                  <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item"><a href="/">Home</a></li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Flags Games
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- services-area -->
    <section id="about" class="about-area about-p pt-120 pb-120 p-relative"
      style="background: url(https://testpod-bucket.s3.amazonaws.com/pages/about-bg-aliments.png) no-repeat; background-position: center center;">
      <div class="quiz-citys">
        <h2 class="font-weight-bold mb-2">Flags Games</h2>
        <p class="font-italic text-muted mb-4 text-center"></p>
        <div class="row quiz-card">
          <% let count=0 %>
            <%data.forEach(value=> {count > 2 ? count=1 : count++%>
              <a href="<%=value.url%>"
                class="card quiz-card-item col-md-3 wow animate__fadeInLeft" data-wow-delay="<%=count*.2%>s"
                style="width: 18rem; padding: 0%">
                <img src="<%=value.image%>" class="card-img-top card-img-guess-country" alt="..." />
                <div class="card-title-regions">
                  <h5 class="card-title quiz-card-title">
                    <%=value.name.toUpperCase()%>
                  </h5>
                </div>
              </a>
              <%})%>
        </div>
      </div>
    </section>

  </main>
  <!-- main-area-end -->

  <script src="/client/js/about.js"></script>