<% layout('Client/layouts/boilerPlate') -%>

<section
  class="breadcrumb-area d-flex align-items-center"
  style="background-image: url(https://testpod-bucket.s3.amazonaws.com/pages/test-bg.png)"
>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-xl-12 col-lg-12">
        <div class="breadcrumb-wrap text-left">
          <div class="breadcrumb-title">
            <h2>Flags Detective</h2>
            <div class="breadcrumb-wrap">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Flags Detective
                  </li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="about" class="about-area about-p pt-120 pb-120 p-relative" style="background: url(https://testpod-bucket.s3.amazonaws.com/pages/about-bg-aliments.png) no-repeat; background-position: center center;">
  <div class="quiz-citys">
    <h2 class="font-weight-bold mb-2">Continents</h2>
    <p class="font-italic text-muted mb-4 text-center"></p>
    <div class="row quiz-card">
      <% let count = 0 %>
      <%data.forEach(value => {count > 2 ? count=1 : count++%> 
      <a href="/flag-detective/<%=value.continent.toLowerCase()%>/easy" class="card quiz-card-item col-md-3 wow animate__fadeInLeft" data-wow-delay="<%=count*.2%>s" style="width: 18rem; padding: 0%">
        <%if(value.continent.toLowerCase() == "africa"){ %>
          <img src="https://testpod-bucket.s3.amazonaws.com/pages/Africa.svg" class="card-img-top card-img-guess-country" alt="..." />
        <%} else if(value.continent.toLowerCase() == "america"){%>
          <img src="https://testpod-bucket.s3.amazonaws.com/pages/SouthAmerica.svg" class="card-img-top card-img-guess-country" alt="..." />
        <%} else if(value.continent.toLowerCase() == "asia"){%>
          <img src="https://testpod-bucket.s3.amazonaws.com/pages/Asia.svg" class="card-img-top card-img-guess-country" alt="..." />
        <%} else if(value.continent.toLowerCase() == "europe"){%>
          <img src="https://testpod-bucket.s3.amazonaws.com/pages/Europe.svg" class="card-img-top card-img-guess-country" alt="..." />
        <%} else if(value.continent.toLowerCase() == "oceania" || "antarctic"){%>
          <img src="https://testpod-bucket.s3.amazonaws.com/pages/Antarctica.svg" class="card-img-top card-img-guess-country" alt="..." />
        <% } %>
        <div class="card-title-regions">
          <h5 class="card-title quiz-card-title">
            <%=value.continent.toUpperCase()%>
          </h5>
        </div>
      </a>
      <%})%>
    </div>
  </div>
</section>


<script src="/client/js/about.js"></script>
