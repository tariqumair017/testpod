<% layout('Client/layouts/boilerPlate') -%>

<section
  class="breadcrumb-area d-flex align-items-center"
  style="background-image: url(/client/img/testimonial/test-bg.png)"
>
  <div class="container">
    <div class="row align-items-center">
      <div class="col-xl-12 col-lg-12">
        <div class="breadcrumb-wrap text-left">
          <div class="breadcrumb-title">
            <h2>Flags Detective</h2>
            <div class="breadcrumb-wrap">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item">
                    <a href="/">Home</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    Flags Detective
                  </li>
                </ol>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section
  id="about"
  class="about-area about-p pt-120 pb-120 p-relative"
  style="
    background: url(/client/img/features/about-bg-aliments.png) no-repeat;
    background-position: center center;
  "
>
  <div class="quiz-citys">
    <h2 class="font-weight-bold mb-2">Continents</h2>
    <p class="font-italic text-muted mb-4 text-center"></p>
    <div class="row quiz-card">
      <%data.forEach(item => {%>
      <a
      href="/flag-detective-game"
        class="card quiz-card-item col-md-3"
        style="width: 18rem; padding: 0%;height: auto;",
      >
        <img
          src="/client/img/continents/<%=item.continentImage%>"
          class="card-img-top card-img"
          alt="..."
        />
        <div class="card-body">
          <h5 class="card-title quiz-card-title">
            <%=item.continent.toUpperCase()%>
          </h5>
          <div class="card-question-number">
            <p class="card-total-scorce"><%=data.length%></p>
            <p class="card-question">questions</p>
          </div>
        </div>
      </a>
      <%})%>
    </div>
  </div>
</section>

<script src="/client/js/about.js"></script>
