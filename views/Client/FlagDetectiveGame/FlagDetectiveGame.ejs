<% layout('Client/layouts/gameBoilerPlate') -%>
<%-include('../partials/gameHeader')%>

<section class="flag-detective-game">
  <div class="flag-detective-game-complete">
    <div class="flag-detective-game-left-part">
      <div class="flag-detective-game-inner">
        <div class="questions-box">
          <div class="que_heading flag-detective-game-card-header">
            <span
              class="flag-detective-score-card score-text-slide-left"
              style="font-size: larger"
            >
              Score : 00
            </span>
            <h2 class="score-text-slide-top" style="margin: 0%">
              What a Country it is ?
            </h2>
            <div
              class="score-text-slide-right"
              style="display: flex; gap: 5px; flex-wrap: wrap"
            >
              <span class="flag-detective-music-on flag-detective-sound d-none">
                <img
                  src="https://testpod-bucket.s3.amazonaws.com/pages/volume_up_white_24dp.svg"
                />
              </span>
              <span class="flag-detective-music-off flag-detective-sound">
                <img
                  src="https://testpod-bucket.s3.amazonaws.com/pages/volume_off_white_24dp.svg"
                />
              </span>
              <a
                href="/flag-detective/regions"
                class="flag-detective-score-card"
              >
                <i
                  class="fa-solid fa-xmark"
                  style="color: #ffffff; font-size: larger"
                ></i>
              </a>
            </div>
          </div>
          <div class="detective-image">
            <div class="loading-skeleton"></div>
          </div>
          <div class="siblings-input">
            <div class="loading-skeleton-inputs"></div>
          </div>
          <div style="display: flex; justify-content: space-evenly">
            <button class="btn ss-btn btn_I_dont_know" type="button">
              I don't know
            </button>
            <button class="btn btn-success submit d-none" type="button">
              Submit
            </button>
          </div>
        </div>
        <div class="result_box d-none">
          <div
            class="que_heading flag-detective-game-card-header"
            style="margin-bottom: 10px"
          >
            <span
              class="flag-detective-score-card-two score-text-slide-left"
              style="font-size: larger"
            >
            </span>
            <div
              class="score-text-slide-right"
              style="display: flex; gap: 5px; flex-wrap: wrap"
            >
              <a
                href="/flag-detective/regions"
                class="flag-detective-score-card"
              >
                <i
                  class="fa-solid fa-xmark"
                  style="color: #ffffff; font-size: larger"
                ></i>
              </a>
            </div>
          </div>
          <canvas
            id="myChart"
            style="
              width: 100%;
              height: 300px;
              display: block;
              border: 2px solid #ccc;
              border-radius: 5px;
              box-shadow: 2px 2px 5px #ccc;
              padding: 15px;
            "
          ></canvas>
          <div
            style="
              display: flex;
              justify-content: space-between;
              margin-top: 20px;
            "
          >
            <% if (data.level == 0) { %>
            <a
              href="/flag-detective/<%=data.continent.toLowerCase()%>/easy"
              target="_self"
              ><button class="btn ss-btn">
                <i
                  class="fa-solid fa-rotate-right"
                  style="margin-right: 10px"
                ></i
                >ReTake
              </button></a
            >
            <% } else if(data.level == 1) { %>
            <a
              href="/flag-detective/<%=data.continent.toLowerCase()%>/normal"
              target="_self"
              ><button class="btn ss-btn">
                <i
                  class="fa-solid fa-rotate-right"
                  style="margin-right: 10px"
                ></i
                >ReTake
              </button></a
            >
            <% } else if(data.level == 2) { %>
            <a
              href="/flag-detective/<%=data.continent.toLowerCase()%>/hard"
              target="_self"
              ><button class="btn ss-btn">
                <i
                  class="fa-solid fa-rotate-right"
                  style="margin-right: 10px"
                ></i
                >ReTake
              </button></a
            >
            <% } else if(data.level == 3) { %>
            <a
              href="/flag-detective/<%=data.continent.toLowerCase()%>/extreme"
              target="_self"
              ><button class="btn ss-btn">
                <i
                  class="fa-solid fa-rotate-right"
                  style="margin-right: 10px"
                ></i
                >ReTake
              </button></a
            >
            <% } %> <% if(data.level < 3){ %>
            <button id="nextLevel" class="btn ss-btn">Next Level</button>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <div class="mobile-side-view">
      <div class="flag-detective-game-right-part">
        <div class="all-quiz-progress" style="width: 100%; position: static">
          <div class="flag-detective-game-timer">
            <div class="loading-skeleton-timer"></div>
          </div>
          <!-- <h5>Your Progress</h5> -->
          <div class="flag-detective-game-scorus-card">
            <p>Flags</p>
            <h5 class="detective-total-questions">05</h5>
          </div>
          <!-- <div class="flag-detective-game-scorus-card">
            <p>Correct</p>
            <h5 class="detective-total-correct">--</h5>
          </div> -->
          <div class="flag-detective-game-scorus-card">
            <p>In-Correct</p>
            <h5 class="detective-total-in-correct">--</h5>
          </div>
          <div class="flag-detective-game-hint">
            <div class="card-hint-flag">
              <i class="fa-solid fa-lightbulb fa-2xl info-btn"></i>
              <p style="margin: 0px;">
                Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                Commodi nisi omnis veniam mollitia nihil et ut ullam asperiores
                pariatur voluptatum.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="clock-timer"></section>

<script>
  var currentContinent = "<%=data.continent%>";
  var currenLevel = "<%=data.level%>";
</script>
<script src="/client/js/flagDetective.js" defer></script>
