<% layout('Client/layouts/boilerPlate') -%>

<main>
  <!-- search-popup -->
  <div
    class="modal fade bs-example-modal-lg search-bg popup1"
    tabindex="-1"
    role="dialog"
  >
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content search-popup">
        <div class="text-center">
          <a href="#" class="close2" data-dismiss="modal" aria-label="Close"
            >× close</a
          >
        </div>
        <div class="row search-outer">
          <div class="col-md-11">
            <input type="text" placeholder="Search for products..." />
          </div>
          <div class="col-md-1 text-right">
            <a href="#"><i class="fa fa-search" aria-hidden="true"></i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /search-popup -->
  <!-- breadcrumb-area -->
  <section
    class="breadcrumb-area d-flex align-items-center"
    style="background-image: url(/client/img/testimonial/test-bg.png)"
  >
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12">
          <div class="breadcrumb-wrap text-left">
            <div class="breadcrumb-title">
              <h2>Guess Country Name</h2>
              <div class="breadcrumb-wrap">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/guess-country">Guess Countries</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Can You Match Flag With Its Country?
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="all-quiz">
    <div class="all-quiz-upper-section">
      <div class="all-quiz-upper-section-header">
        <h6>Asia Flags Examination</h6>
        <h6>Test #1</h6>
      </div>
      <div class="all-quiz-upper-section-inner">
        <div class="all-quiz-upper-section-part-left">
          <h4><%=data.gameName%></h4>
          <p class="guess-country-flags-details">
            <%=data.gameDetail%>
          </p>
        </div>
        <div class="all-quiz-upper-section-part-right">
          <div class="all-quiz-upper-section-scorus-card">
            <p>Question</p> 
            <h5 _id="<%=data._id%>" id="total-questions">05</h5>
          </div>
          <div class="all-quiz-upper-section-scorus-card">
            <p>Correct</p>
            <h5 id="total-correct">--</h5>
          </div>
          <div class="all-quiz-upper-section-scorus-card">
            <p>In-Correct</p>
            <h5 id="total-in-correct">--</h5>
          </div>
        </div>
      </div>
    </div>

    <div class="all-quizzes">
      <div class="all-quiz-left-part">
        <div class="questions-box">
          <div class="align-items-center">
            <div class="quiz-image">
              <div class="que_text"></div>
            </div>

            <div style="margin-top: 10px">
              <div class="option_list"></div>
            </div>
            <div style="width: 100%">
              <div
                class="time_line"
                style="
                  background: #eb2d00;
                  height: 7px;
                  border-radius: 50px;
                  transition: all 0.2s;
                "
              ></div>
            </div>
          </div>
          <div class="row justify-content-center align-items-center">
            <div class="col-md-6 text-center">
              <button
                class="btn btn ss-btn next_btn d-none"
                style="width: 200px"
              >
                Next Question ➜
              </button>

              <button
                class="btn btn-danger result_btn d-none"
                style="width: 200px; margin-top: 10px"
              >
                Show Result
              </button>
            </div>
          </div>
        </div>
        <div class="result_box d-none">
          <canvas
            id="myChart"
            style="
              width: 100%;
              display: block;
              border: 2px solid #ccc;
              border-radius: 5px;
              box-shadow: 2px 2px 5px #ccc;
              padding: 15px;
            "
          ></canvas>
        </div>
      </div>
      <div class="all-quiz-right-part">
        <div class="all-quiz-progress">
          <div class="progress-timer">
            <span
              class="total_que"
              style="font-size: 30px; font-weight: bold"
            ></span>
            <h2
              id="testDuration"
              style="font-size: 30px; font-weight: bold; color: #A8171A"
            >
              --
            </h2>
          </div>
          <div
            class="row justify-content-center align-items-center mt-3 time_up d-none">
            <div class="col-md-6 text-center py-5">
              <h2 style="font-size: 40px; font-weight: bold; color: #A8171A">
                Time Up
              </h2>
            </div>
          </div>
          <h5>Hint</h5>
          <div class="your-progress">
        </div>
        </div>
      </div>
    </div>
  </section>
</main>

<script src="/client/js/select-country.js"></script>
<script src="/client/js/about.js"></script>

