  >
    <span class="flag-detective-music-on flag-detective-sound" title="Music On">
      <img src="/client/img/bg/volume_up_white_24dp.svg" />
    </span>
    <span
      class="flag-detective-music-off flag-detective-sound d-none"
      title="Music Off"
    >
      <img src="/client/img/bg/volume_off_white_24dp.svg" />
    </span>
    <a href="/flag-puzzle-regions" class="flag-detective-score-card">
      <i
        class="fa-solid fa-xmark"
        style="color: #ffffff; font-size: larger"
      ></i>
    </a>
  </div>
</div>

<div class="puzzle">
  <div class="puzzle-area">
    <div class="puzzle-image">
      <div id="app"></div>
      <div class="result_box d-none">
        <div class="que_heading flag-detective-game-card-header" style="margin-bottom: 10px;">
          <span class="flag-detective-score-card-two score-text-slide-left" style="font-size: larger;">
          </span>
          <div class="score-text-slide-right" style="display: flex;gap: 5px;flex-wrap: wrap;">
            <a href="/flag-puzzle-regions" class="flag-detective-score-card">
              <i class="fa-solid fa-xmark" style="color: #ffffff;font-size: larger;"></i>
            </a>
          </div>
        </div>
        <canvas id="myChart" style="
          width: 100%;
          height: 250px;
          display: block;
          border: 2px solid #ccc;
          border-radius: 5px;
          box-shadow: 2px 2px 5px #ccc;
          padding: 15px;
        "></canvas>
        <div style="display: flex;justify-content: space-between;margin-top: 20px;">
          <a href="/flag-puzzle-regions/<%=data.continent%>/game/<%=data.level%>" target="_self"><button
              class="btn ss-btn"><i class="fa-solid fa-rotate-right"
                style="margin-right: 10px;"></i>ReTake</button></a>
        </div>
      </div>
    </div>
  </div>
  <div class="mobile-side-view">
    <div class="flag-detective-game-right-part">
      <div class="all-quiz-progress">
        <div class="flag-detective-game-card">
          <div class="flag-detective-game-timer">
            <div class="timer__background">
              <div class="timer__display">
                <!-- <div class="display minute"></div>
              <span class="display colon">:</span>
              <div class="display seconds"></div> -->
              </div>
              <span
                class="time_up d-none"
                style="font-size: 15px; font-weight: bold; color: #a8171a"
                >Completed</span
              >
              <circle class="st0" cx="260.59" cy="260.59" r="253.09" />
            </div>
          </div>
        </div>
        <!-- <h5>Your Progress</h5> -->
        <div class="flag-detective-game-scorus-card">
          <p>Flags</p>
          <h5 class="detective-total-questions">05</h5>
        </div>
        <!-- <div class="flag-detective-game-scorus-card">
          <p>Correct</p>
          <h5 class="detective-total-correct">--</h5>
        </div> -->
        <div class="flag-detective-game-scorus-card">
          <p>In-Correct</p>
          <h5 class="detective-total-in-correct">--</h5>
        </div>
        <div class="puzzle-function">
          <i
            class="fa-solid fa-eye"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            style="cursor: pointer;font-size: larger;"
            title="Hint"
          ></i>
          <p style="margin: 0%; font-size: xx-large">|</p>
          <i
            class="fa-solid fa-shuffle shufflepuzzle"
            style="font-size:larger; cursor: pointer"
            title="Shuffle"
          ></i>
        </div>
        <div class="flag-detective-game-scorus-card">
          <button class="btn ss-btn next-btn">
            Next<i class="fa-solid fa-arrow-right next-flag"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
