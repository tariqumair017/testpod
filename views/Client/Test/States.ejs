<% layout('Client/layouts/boilerPlate') -%>

<main>
  <!-- breadcrumb-area -->
  <section
    class="breadcrumb-area d-flex align-items-center"
    style="background-image: url(https://testpod-bucket.s3.amazonaws.com/pages/test-bg.png)"
  >
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12">
          <div class="breadcrumb-wrap text-left">
            <div class="breadcrumb-title wow animate__fadeInDown" data-wow-duration=".9s">
              <h2>States</h2>
              <div class="breadcrumb-wrap">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="/">Home</a>
                    </li> 
                    <li class="breadcrumb-item active" aria-current="page">
                        States
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>
      
    </div>
  </section>
</main>

<section
  id="about"
  class="about-area about-p pt-120 pb-120 p-relative"
  style="
    background: url(https://testpod-bucket.s3.amazonaws.com/pages/about-bg-aliments.png) no-repeat;
    background-position: center center;
  ">
  <div class="quiz-citys">
    <h2 class="font-weight-bold mb-2">All States</h2>
    <p class="font-italic text-muted mb-4 text-center">
      
    </p>
    <div class="row quiz-card">
      <% let count = 0 %>
      <%data.forEach(value => { count > 3 ? count=1 : count++%> 
      <a href="/dmv-test/<%=value%>" class="state-card quiz-card-item col-md-3 wow animate__fadeInLeft" data-wow-delay="<%=count*.2%>s" style="width: 17rem; padding: 0%">
          <% if(value == "new-york") {%>
            <img src="https://testpod-bucket.s3.amazonaws.com/pages/new-york-city.jpg" class="card-img-top card-img" alt="..." />
          <% } else if(value == "new-jersey") {%>
            <img src="https://testpod-bucket.s3.amazonaws.com/pages/new-jersey-city.jpg" class="card-img-top card-img" alt="..." />
          <% } else {%>
            <img src="https://a.cdn-hotels.com/gdcs/production49/d785/da360e83-6abc-4783-957f-72d1d64d0751.jpg?impolicy=fcrop&w=800&h=533&q=medium" class="card-img-top card-img" alt="..." />
          <% } %>
          <div class="card-title-regions">
            <h5 class="card-title quiz-card-title">
              <%= value.toUpperCase()%>
            </h5>
          </div>
      </a>
      <%})%>
    </div>
  </div>
</section>

