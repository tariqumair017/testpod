<script>

  async function getCountriesOfRegion(region) {
    const response = await fetch(`/admin/flag-data-api/country/${region}`);
    const data = await response.json(); 

    let _html = '';
    document.getElementById("editCountryOfDetective").innerHTML = `<option hidden>Please Select Country</option>`;
    document.getElementById("editCountryOfGuessCountry").innerHTML = `<option hidden>Please Select Country</option>`;
    document.getElementById("editCountryOfGuessFlag").innerHTML = `<option hidden>Please Select Country</option>`;
    data.forEach(element => {
      _html += `<option value="${element.country}">${element.country}</option>`;
    });     
    document.getElementById("editCountryOfDetective").innerHTML += _html; 
    document.getElementById("editCountryOfGuessCountry").innerHTML += _html;
    document.getElementById("editCountryOfGuessFlag").innerHTML += _html;
  }

