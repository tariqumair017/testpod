<% layout('Admin/layouts/boilerPlate') -%>

    
     <!--Container Main start-->
     <div class="application bg-light">
      <span style="display: flex;">
        <h3 class="test-name" >
          <%=data.gameName.toUpperCase()%>
        </h3> 
      <form class="edit-test" action="/game-management/manage-flags-games/<%=data._id%>?_method=PUT" method="POST">
        <div style="display: flex;">
          <input class="add-quiz-image-input form-control" value="<%=data.gameName.toUpperCase()%>" name="gameName" id="formFile">
          <button class="edit-test-btn" type="submit" ><i class="fa-solid fa-check"></i></button>
        </div>
      </form>
      <i style="margin-left: 20px; margin-top: 5px;cursor: pointer;" class="test-edit fa-solid fa-pen"></i>
      </span> 
      <%- include ('./partials/SuccessError'); -%>
      <table class="table">
          <thead>
            <tr>
              <th class="table-hash-col" >#</th>
              <th class="table-question-col-flag">Flag</th>
              <th class="table-option-col" >Option A</th>
              <th class="table-option-col" >Option B</th>
              <th class="table-option-col" >Option C</th>
              <th class="table-option-col" >Option D</th>
              <th class="table-answer-col" >Answer</th>
              <th class="table-action-col" class="table-buttons" >Actions</th>
            </tr>
          </thead>
          <tbody>
            <%var count = 1%>
            <% data.questions.forEach(item => { %> 
              <tr>
                <th scope="row"><%=count%></th>
                <td ><img width="50px" height="40px" src="/upload-images/<%=item.flag%>" /></td>
                <td><%=item.optionA%></td>
                <td><%=item.optionB%></td>
                <td><%=item.optionC%></td>
                <td><%=item.optionD%></td>
                <td><%=item.correct%></td>
                <td>
                  <span class="table-buttons">
                    <button onclick="editQuestion(`<%=data._id%>`, `<%=item._id%>`)" data-bs-toggle="modal" data-bs-target="#exampleModal" class="btn btn-primary">Edit</button>
                    <form action="/game-management/manage-flags-games/<%=data._id%>/<%=item._id%>?_method=DELETE" method="POST"> 
                      <button type="submit" class="btn btn-danger">Delete</button> 
                    </form>
                  </span>
                </td>
              </tr>
              <%++count%> 
            <%})%> 
          </tbody>
        </table>
        </table>

        <div>
         <button data-bs-toggle="modal" data-bs-target="#exampleModal1" type="button" class="btn btn-success">Add New Question</button>
        </div>

        <!-- Add New Question -->  
        <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">New Question</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form class="add-quiz-form row needs-validation" action="/game-management/draw-new-flags" method="POST" enctype="multipart/form-data" novalidate>
                        <div id="setNewForm">
                           <div class="form-data">
                             <div class="row">
                               <div class="col-md-6 position-relative mt-4">
                                 <label for="newCountry" class="form-label">Country</label>
                                 <input name="country" placeholder="Enter Country Name" type="text" class="form-control" id="newCountry" required>
                                 <div class="invalid-tooltip">
                                   Please provide Country Name.
                                 </div>
                             </div>
                             <div class="col-md-6 position-relative mt-4">
                               <label for="newFlagUrl" class="form-label">Flag Url</label>
                               <input name="flagUrl" placeholder="Flag Url" type="text" class="form-control" id="newFlagUrl" required>
                               <div class="invalid-tooltip">
                                 Please provide a Flag Url.
                               </div>
                           </div>
                               <div class="col-md-6 position-relative mt-3">
                                 <label for="newflagDetails" class="form-label">Flag Details</label>
                                 <input name="flagDetails" placeholder="Please Enter Flags Details" type="text" class="form-control" id="newflagDetails" required>
                                 <div class="invalid-tooltip">
                                   Please provide a Flags Details.
                                 </div>
                               </div>
                                 <div class="col-md-6 position-relative mt-3">
                                   <label class="form-label">Select Shape</label>
                                   <div class="add-quiz-state-image">
                                     <input class="add-quiz-image-input formFile form-control" type="file" name="shapeImg" onchange="preview()" required> 
                                   </div> 
                                 </div>
                               <div class="col-md-6 position-relative mt-3">
                                   <div class="container" style="padding: 0%;">
                                       <label class="form-label">Select Colors</label>
                                       <select multiple data-multi-select-plugin name="correctColors" id="colorsID" required>
                                         <option  hidden>Please Select Colors</option>                     
                                       </select>
                                   </div>
                               </div>
                               <div class="col-md-6 position-relative mt-3"> 
                                   <label for="arrangementID" class="form-label">Enter Arrangement</label>
                                   <input name="arrangement" placeholder="Enter Arrangement" type="text" class="form-control" id="arrangementID" required>
                                   <div class="invalid-tooltip">
                                     Please provide Arrangement.
                                   </div>  
                               </div>
                             </div>
                             </div>
                             </div>
                           <div class="col-12 mt-4">
                               <button class="btn" style="background-color: #a8171a;color: white;" type="submit">Submit</button>
                           </div>
                         </form>
                </div>
              </div>
            </div>
          </div>  
        <!-- Add New Question -->
 
        <!-- Edit Question --> 
        <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Edit Flag
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              id="editFlagForm"
              class="add-quiz-form row g-4 needs-validation"
              novalidate
              action=""
              method="POST"
              enctype="multipart/form-data"
            >
            <div id="setEditForm">
              <div class="form-data">
                <div class="row">
                  <div class="col-md-6 position-relative mt-4">
                    <label for="newCountry" class="form-label">Country</label>
                    <input name="country" placeholder="Enter Country Name" type="text" class="form-control" id="editCountry" required>
                    <div class="invalid-tooltip">
                      Please provide Country Name.
                    </div>
                </div>
                <div class="col-md-6 position-relative mt-4">
                  <label for="newFlagUrl" class="form-label">Flag Url</label>
                  <input name="flagUrl" placeholder="Flag Url" type="text" class="form-control" id="editFlagUrl" required>
                  <div class="invalid-tooltip">
                    Please provide a Flag Url.
                  </div>
              </div>
                  <div class="col-md-6 position-relative mt-3">
                    <label for="newflagDetails" class="form-label">Flag Details</label>
                    <input name="flagDetails" placeholder="Please Enter Flags Details" type="text" class="form-control" id="editFlagDetails" required>
                    <div class="invalid-tooltip">
                      Please provide a Flags Details.
                    </div>
                  </div>
                    <div class="col-md-6 position-relative mt-3">
                      <label class="form-label">Select Shape</label>
                      <div class="add-quiz-state-image">
                        <input class="add-quiz-image-input formFile form-control" type="file" name="shapeImg" onchange="preview()"> 
                      </div> 
                    </div>
                  <div class="col-md-6 position-relative mt-3">
                      <div class="container" style="padding: 0%;">
                          <label class="form-label">Select Colors</label>
                          <select multiple data-multi-select-plugin name="correctColors" id="editColorsID">  
                          </select>
                      </div>
                  </div>
                  <div class="col-md-6 position-relative mt-3"> 
                      <label for="arrangementID" class="form-label">Enter Arrangement</label>
                      <input name="arrangement" placeholder="Enter Arrangement" type="text" class="form-control" id="editArrangementID" required>
                      <div class="invalid-tooltip">
                        Please provide Arrangement.
                      </div>  
                  </div>
                </div>
                </div>
                </div>
              <div class="col-12 mt-4">
                  <button class="btn" style="background-color: #a8171a;color: white;" type="submit">Edit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
 
        <!-- Edit Question -->
        
</div> 
<!--Container Main end-->   

<script>
  async function editQuestion(Pid, Cid) {   
    const response = await fetch(`/game-management/manage-flags-games/${Pid}/edit`);
    const finalData = await response.json(); 
    var data;
    finalData.questions.forEach(element => {
      if(element._id == Cid)
      {
        data = element;
      }
    }); 
   
    document.getElementById("optionAID").value = data.optionA;
    document.getElementById("optionBID").value = data.optionB;
    document.getElementById("optionCID").value = data.optionC;
    document.getElementById("optionDID").value = data.optionD;
    document.getElementById("correctID").value = data.correct; 
    document.getElementById("hintID").value = data.hint; 
    document.getElementById("updateForm").action = `/game-management/manage-flags-games/${data._id}/${Pid}?_method=PUT`;
}
</script>

<script src="/admin/js/allQuiz.js" ></script>
<script src="/admin/js/draw-new-flag.js" ></script>
