<% layout('Admin/layouts/boilerPlate') -%>


<!--Container Main start-->
 <div class="application bg-light">
    <h4 class="mb-5">Create Guess Country Game</h4>
    <%- include ('../partials/SuccessError'); -%>
    <form id="guessCountryAdd" class="add-quiz-form row needs-validation" action="/admin/guess-country-game/add" method="POST" novalidate>
    <div class="row" >
      <div class="col-md-6"> 
        <label for="region" class="form-label">Select Region</label>
        <select class="form-select" id="regionID" name="region" required> 
          <option hidden>Please Select Region</option>     
        </select>
      </div>
      <div class="col-md-6">
        <label for="level" class="form-label">Select Level</label>
        <select class="form-select" id="level" name="level" required> 
          <option hidden>Please Select Game Level</option>                     
          <option value="0">Easy</option>  
          <option value="1">Normal</option>  
          <option value="2">Hard</option>  
          <option value="3">Extreme</option>  
        </select>
      </div> 
      </div>
    <hr>
     <div id="setNewForm">
        <div class="form-data">
          <div class="row">
            <div class="col-md-6"> 
              <label for="country" class="form-label">Select Country</label>
              <select class="form-select" name="country" id="countryID" required> 
                <option hidden>Please Select Country</option>     
              </select> 
            </div>
            <div class="col-md-6"> 
              <label for="flagUrl" class="form-label">Flag Url</label>
              <input readonly name="flag" placeholder="Flag Url" type="text" class="form-control" id="flagUrl" required>
            </div>
          </div>
          <div class="row">
          <div class="col-md-3 position-relative">
            <input name="optionA" placeholder="Please Enter Option A" type="text" class="form-control" id="findCountryGameOptionA" required>
            <div class="invalid-tooltip">
              Please provide a Option A.
            </div>
          </div> 
          <div class="col-md-3 position-relative">
            <input name="optionB" placeholder="Please Enter Option B" type="text" class="form-control" id="findCountryGameOptionB" required>
            <div class="invalid-tooltip">
              Please provide a Option B.
            </div>
          </div> 
          <div class="col-md-3 position-relative">
            <input name="optionC" placeholder="Please Enter Option C" type="text" class="form-control" id="findCountryGameOptionC" required>
            <div class="invalid-tooltip">
              Please provide a Option C.
            </div>
          </div> 
          <div class="col-md-3 position-relative">
            <input name="optionD" placeholder="Please Enter Option D" type="text" class="form-control" id="findCountryGameOptionD" required>
            <div class="invalid-tooltip">
              Please provide a Option D.
            </div>
          </div>
          </div> 
          <div class="row">
          <div class="col-md-6 position-relative">
            <label for="correctID" class="form-label">Correct Answer</label>
            <input readonly name="correct" id="correctID" placeholder="Correct Answer" type="text" class="form-control" required>
            <div class="invalid-tooltip">
              Please provide a Answer.
            </div>
          </div>
          <div class="col-md-6 position-relative">
            <label for="hint" class="form-label">Please Enter Hint</label>
            <input name="hint" placeholder="Please Enter Hint" type="text" class="form-control" id="findCountryGameHint" required>
            <div class="invalid-tooltip">
              Please provide a Hint.
            </div>
          </div>
          </div>
          <hr>
          </div>
      </div>
        <div class="col-12 mt-2">
            <button class="btn" style="background-color: #a8171a;color: white;" type="submit">Submit</button>
            <button style="float: right; border-radius: 50%; background-color: #a8171a;color: white;" class="show-form btn " type="button"><i class="fa-solid fa-plus"></i></button>
        </div>
      </form>

    <!-- Add Multiple Questions -->
      <div style="display: none;" >
        <div id="addNewForm">
          <div class="form-data">
            <div class="row">
              <div class="col-md-6"> 
                <label for="country" class="form-label">Select Country</label>
                <select class="form-select" name="country" onchange="selectedCountryHere(this)" required> 
                  <option hidden>Please Select Country</option>     
                </select> 
              </div>
              <div class="col-md-6"> 
                <label for="" class="form-label">Flag Url</label>
                <input readonly name="flag" placeholder="Flag Url" type="text" class="form-control" required>
              </div>
            </div>
            <div class="row">
            <div class="col-md-3 position-relative">
              <input name="optionA" placeholder="Please Enter Option A" type="text" class="form-control" id="findCountryGameOptionA" required>
              <div class="invalid-tooltip">
                Please provide a Option A.
              </div>
            </div> 
            <div class="col-md-3 position-relative">
              <input name="optionB" placeholder="Please Enter Option B" type="text" class="form-control" id="findCountryGameOptionB" required>
              <div class="invalid-tooltip">
                Please provide a Option B.
              </div>
            </div> 
            <div class="col-md-3 position-relative">
              <input name="optionC" placeholder="Please Enter Option C" type="text" class="form-control" id="findCountryGameOptionC" required>
              <div class="invalid-tooltip">
                Please provide a Option C.
              </div>
            </div> 
            <div class="col-md-3 position-relative">
              <input name="optionD" placeholder="Please Enter Option D" type="text" class="form-control" id="findCountryGameOptionD" required>
              <div class="invalid-tooltip">
                Please provide a Option D.
              </div>
            </div>
            </div> 
            <div class="row">
            <div class="col-md-6 position-relative">
              <label for="" class="form-label">Correct Answer</label>
              <input readonly name="correct" placeholder="Correct Answer" type="text" class="form-control" required>
              <div class="invalid-tooltip">
                Please provide a Answer.
              </div>
            </div>
            <div class="col-md-6 position-relative">
              <label for="hint" class="form-label">Please Enter Hint</label>
              <input name="hint" placeholder="Please Enter Hint" type="text" class="form-control" id="findCountryGameHint" required>
              <div class="invalid-tooltip">
                Please provide a Hint.
              </div>
            </div>
            </div>
            <hr>
            </div> 
            </div>
      </div>
      </div> 
</div>

<script>
  document.getElementById("guessCountryAdd").addEventListener("submit", function(e){
    e.preventDefault();
    this.submit();
  });
</script>
<script src="/admin/js/multiQuestionGuessCountry.js"></script>
