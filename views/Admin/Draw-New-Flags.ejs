    </div>

    <div>
      <button
        data-bs-toggle="modal"
        data-bs-target="#exampleModal1"
        type="button"
        class="btn btn-success"
      >
        Add New Flags
      </button>
    </div>

    <!-- Add New Quiz -->
    <div
      class="modal fade"
      id="exampleModal1"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              New Question
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form class="add-quiz-form row needs-validation" action="/game-management/draw-flags-games" method="POST" enctype="multipart/form-data" novalidate>
                 <div id="setNewForm">
                    <div class="form-data">
                      <div class="row">
                        <div class="col-md-6 position-relative mt-4">
                            <select class="form-select" id="countryID" name="country" onchange="selectedOption()" required> 
                                <option hidden >Please Select Country Name</option>  
                            </select> 
                          </div>
                          <div class="col-md-6 position-relative mt-4">
                            <input name="flagDetails" placeholder="Please Enter Flags Details" type="text" class="form-control" id="validationTooltip03" required>
                            <div class="invalid-tooltip">
                              Please provide a Flags Details.
                            </div>
                          </div>
                          <div class="col-md-6 position-relative mt-4">
                            <label class="form-label"></label>
                            <select class="form-select" id="shapeID" name="shape" required> 
                                <option hidden >Please Select Flag Shape</option>   
                            </select>  
                          </div>
                        <div class="col-md-6 position-relative mt-3">
                            <div class="container" style="padding: 0%;">
                                <label class="form-label">Select Colors</label>
                                <select multiple data-multi-select-plugin name="correctColors" required>
                                    <option value="red">Red</option>
                                    <option value="pink">Pink</option>
                                    <option value="black">Black</option>
                                    <option value="yellow">Yellow</option>
                                    <option value="white">White</option>
                                    <option value="blue">Blue</option>
                                   <option value="grey">Grey</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 position-relative mt-4">
                            <div class="container" style="padding: 0%;">
                                <label for="validationTooltip03" class="form-label">Select Arrangement</label>
                                <select class="form-select" id="arrangementID" name="arrangement" required> 
                                    <option hidden >Please Select Arrangement</option>                     
                                  <option value="Three Stripes">Three Stripes</option>
                                  <option value="Two Stripes">Two Stripes</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 position-relative mt-4">
                            <label for="flagUrl" class="form-label">Flag Url</label>
                            <input disabled name="flagDetails" placeholder="Flag Url" type="text" class="form-control" id="flagUrl" required>
                            <div class="invalid-tooltip">
                              Please provide a Flag Url.
                            </div>
                        </div>
                      </div>
                      </div>
                      </div>
                    <div class="col-12 mt-4">
                        <button class="btn" style="background-color: #a8171a;color: white;" type="submit">Submit</button>
                    </div>
                  </form>
            
          </div>
        </div>
      </div>
    </div>
    <!-- Add New Quiz -->

    <!-- Edit Quiz -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Edit Question
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              id="updateForm"
              class="add-quiz-form row g-4 needs-validation"
              novalidate
              action=""
              method="POST"
            >
            <div class="row">
                <div class="col-md-6 position-relative mt-4">
                    <select class="form-select" id="countryID" name="country" onchange="selectedOption()" required> 
                        <option hidden >Please Select Country Name</option>  
                    </select> 
                  </div>
                  <div class="col-md-6 position-relative mt-4">
                    <input name="flagDetails" placeholder="Please Enter Flags Details" type="text" class="form-control" id="validationTooltip03" required>
                    <div class="invalid-tooltip">
                      Please provide a Flags Details.
                    </div>
                  </div>
                  <div class="col-md-6 position-relative mt-4">
                    <label class="form-label"></label>
                    <select class="form-select" id="shapeID" name="shape" required> 
                        <option hidden >Please Select Flag Shape</option>   
                    </select>  
                  </div>
                <div class="col-md-6 position-relative mt-3">
                    <div class="container" style="padding: 0%;">
                        <label class="form-label">Select Colors</label>
                        <select multiple data-multi-select-plugin name="correctColors" required>
                            <option value="red">Red</option>
                            <option value="pink">Pink</option>
                            <option value="black">Black</option>
                            <option value="yellow">Yellow</option>
                            <option value="white">White</option>
                            <option value="blue">Blue</option>
                           <option value="grey">Grey</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 position-relative mt-4">
                    <div class="container" style="padding: 0%;">
                        <label for="validationTooltip03" class="form-label">Select Arrangement</label>
                        <select class="form-select" id="arrangementID" name="arrangement" required> 
                            <option hidden >Please Select Arrangement</option>                     
                          <option value="Three Stripes">Three Stripes</option>
                          <option value="Two Stripes">Two Stripes</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 position-relative mt-4">
                    <label for="flagUrl" class="form-label">Flag Url</label>
                    <input disabled name="flagDetails" placeholder="Flag Url" type="text" class="form-control" id="flagUrl" required>
                    <div class="invalid-tooltip">
                      Please provide a Flag Url.
                    </div>
                </div>
              </div>
              </div>
              </div>
              </div>

              <div class="col-12 mt-2">
                <button
                  data-bs-toggle="tooltip"
                  class="btn"
                  type="submit"
                  data-bs-toggle="tooltip"
                  data-bs-placement="top"
                  data-bs-title="Tooltip on top"
                  style="background-color: #a8171a;color: white;"
                >
                  Submit
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Edit Quiz -->
  </div>
  <!--Container Main end-->

  <script>
    async function editQuestion(Pid, Cid) {
      const response = await fetch(`/all-quiz/${Pid}/edit`);
      const finalData = await response.json();
      var data;
      finalData.questions.forEach((element) => {
        if (element._id == Cid) {
          data = element;
        }
      });
      document.getElementById("questionID").value = data.question;
      document.getElementById("optionAID").value = data.optionA;
      document.getElementById("optionBID").value = data.optionB;
      document.getElementById("optionCID").value = data.optionC;
      document.getElementById("optionDID").value = data.optionD;
      document.getElementById("correctID").value = data.correct;
      document.getElementById("hintID").value = data.hint;
      document.getElementById(
        "updateForm"
      ).action = `/all-quiz/${data._id}/${Pid}?_method=PUT`;
    }
  </script>
  <script src="/admin/js/allQuiz.js"></script>
  <script src="/admin/js/draw-new-flag.js" ></script>
</div>
